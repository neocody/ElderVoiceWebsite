VITE_SUPABASE_ANON_KEY="your-supabase-anon-key"
VITE_SUPABASE_URL="https://your-project.supabase.co"

# Frontend URLs
FRONTEND_URL_DEV="http://localhost:5173"
FRONTEND_URL_PROD="https://eldervoice.com"

# Server Port
PORT=5001

# Frontend Domain Configuration
# URL of the main app (for redirecting to auth/admin pages)
# Local development: http://localhost:5174
# Production: https://app.eldervoice.com
# Replit: https://your-app-repl.repl.co
VITE_APP_DOMAIN=http://localhost:5174
